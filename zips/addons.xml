<?xml version='1.0' encoding='utf-8'?>
<addons>
<addon id="plugin.video.fanfilm" name="FanFilm" version="2025.09.09.0" provider-name="FF Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.future"/>
        <import addon="plugin.video.youtube" optional="true"/>
        <import addon="script.module.pyxbmct"/>
        <import addon="script.module.resolveurl"/>
        <import addon="script.fanfilm.media" version="2025.07.25.0"/>
        <import addon="script.module.inputstreamhelper"/>
        <import addon="script.module.myconnpy"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <!-- <extension point="xbmc.python.script" library="script.py" /> -->
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="kodi.context.item">
      <menu id="kodi.core.main">
        <item library="epg.py">
          <label lang="pl">Szukaj w FanFilm</label>
          <visible>String.StartsWith(ListItem.FolderPath,pvr://) + !String.IsEmpty(ListItem.ChannelName)</visible>
        </item>
      </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <summary lang="pl">FanFilm</summary>
        <description lang="pl">Plugin z filmami i serialami.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>
        </news>
    </extension>
</addon>
<addon id="script.fanfilm.media" version="2025.07.29.0" name="FanFilm Themepack" provider-name="-">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
        <summary>Themes for the FanFilm Addon</summary>
        <description></description>
        <platform>all</platform>
    </extension>
</addon>
<addon id="repository.fanfilm.beta" name="FanFilm Repository (BETA)" version="1.0" provider-name="fanfilm">
    <extension point="xbmc.addon.repository" name="FanFilm Repository (BETA)">
        <dir minversion="19.90">
            <info compressed="false">https://fanfilm-pl.github.io/repository.fanfilm.beta/zips/addons.xml</info>
            <checksum  verify="sha256">https://fanfilm-pl.github.io/repository.fanfilm.beta/zips/addons.xml.sha256</checksum>
            <datadir zip="true">https://fanfilm-pl.github.io/repository.fanfilm.beta/zips/</datadir>
            <hashes>sha256</hashes>
        </dir>
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Gujal00/smrzips/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Gujal00/smrzips/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Gujal00/smrzips/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>FanFilm Repository (BETA)</summary>
        <summary lang="pl_PL">FanFilm Repozytorium (BETA)</summary>
        <description>Repository with BETA versions</description>
        <description lang="pl_PL">Repozytorium z wersjami BETA</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
